<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Bitbucket App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if current_user %>
          <li><%= link_to "Repositories", repositories_path %></li>
          <li><%= link_to "Assignments", assignments_path %></li>
          <li><%= link_to "Groups", groups_path %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
            </ul>
          </li> 
        <% else %>   
          <li><%= link_to "Sign in with Bitbucket", "/auth/bitbucket", id: "sign_in" %></li>                
        <% end %>
      </ul>        
    </nav>
  </div>
</header>
