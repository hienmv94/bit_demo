<p id="notice"><%= notice %></p>


<h1>Listing Assignments</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= link_to 'New assignment', new_assignment_path, class: "btn btn-success" %><br><br>
    <% if @assignments.any? %>
    <table class="table table-striped">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Group</th>
          <th>Due Date</th>
          <th></th>
        </tr>
    <% i=0 %>
      <tbody>
        <% @assignments.each do |assignment| %>
          <tr>
            <td><%= i=i+1 %></td>
            <td><%= link_to assignment.name , assignment %></td>
            <td><%= link_to assignment.group.name, assignment.group %></td>
            <td><%= assignment.due_date %></td>
            <td><%= link_to 'Edit', edit_assignment_path(assignment) %>|
            <%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>