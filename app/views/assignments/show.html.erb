<p id="notice"><%= notice %></p>
<div class="row">
  <h1 class="center"><%= @assignment.name %></h1>
  <div class="col-md-3">
	<%= link_to 'Edit', edit_assignment_path(@assignment), class: "btn btn-default" %> 
	<%= link_to 'Back', assignments_path, class: "btn btn-default"  %>
  </div>
</div>
<div class="row">
  <div class="col-md-3"> 
  	<h2 class="center text-info">Information</h2>
	<table class="table table-striped">
	  <tr>
	  	<th>Repository</th>
	  	<td><%= @assignment.repo_name %></td>
	  </tr>
	  <tr>
	  	<th>Group</th>
	  	<td><%= @assignment.group.name %></td>
	  </tr>
	  </tr>
	  <tr>
	  	<th>Due</th>
	  	<td><%= @assignment.due_date %></td>
	  </tr>
	</table>
  </div>
	
  <div class="col-md-7 col-md-offset-1">
	<h2 class="center text-info">All Member(<%= @assignment.group.members.count %>)</h2>
	<% if @assignment.group.members.any? %>
	  <table class="table table-striped">
		<tr>
	   	  <th>#</th>
		  <th>Name</th>
		</tr>
		<% i=0 %>
	<% @assignment.group.members.each do |member|%>
	   	<tr>
		  <td><%= i=i+1 %></td>
		  <td><%= member.name %></td>
	    </tr>
	  <% end %>
	  </table>
	<% end %>
</div>